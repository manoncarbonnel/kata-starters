{
  "name": "typescript-kata-starter",
  "version": "1.0.0",
  "author": "Shodo Nantes",
  "scripts": {
    "format": "prettier --write src",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:run": "vitest run",
    "test:run:coverage": "vitest run --coverage",
    "test:pw:install": "npx playwright install",
    "test:pw": "npx playwright test",
    "test:pw:debug": "npx playwright test --debug",
    "test:pw:codegen": "npx playwright codegen",
    "test:pw:ui": "npx playwright test --ui",
    "test:pw:report": "npx playwright show-report",
    "test:mutations": "npx stryker run"
  },
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.44.0",
    "@stryker-mutator/typescript-checker": "^8.2.6",
    "@stryker-mutator/vitest-runner": "^8.2.6",
    "@types/node": "^20.12.8",
    "@vitest/coverage-istanbul": "^1.6.0",
    "prettier": "2.7.1",
    "typescript": "^5.4.5",
    "vitest": "^1.6.0"
  }
}
